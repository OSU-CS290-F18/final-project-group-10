<script src = "index.js" charset="utf-8" defer></script>

<body>
<h1 class = "formulas-title">Formula Sheet</h1>
<form method="post" action="addformula">
<label>Enter formula to add</label><br>
<input type="text" id="formula" name="formula"><br>
<input type="submit" value="Add Formula">
</form>

<form method="post" action="rmformula">
<label>Enter formula to remove</label><br>
<input type="text" id="rmformula" name="rmformula"><br>
<input type="submit" value="Remove Formula">
</form>
</body>

<div class = "forumlas-outline">
    <p class = formula-text>
      {{#each formula}}
      {{formula}}<br>
      {{/each}}
    </p>
</div>

<button id="refresh-button" action='rmall'>&#x27F3;</button>
